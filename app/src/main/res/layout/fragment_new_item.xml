<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="2"
                android:paddingLeft="32dp"
                android:paddingRight="32dp">


                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_columnSpan="2"
                    app:layout_gravity="fill_horizontal|center"
                    app:layout_row="0"
                    app:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name:"
                    android:id="@+id/textView4"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal|center_vertical"
                    android:textColor="@color/text_primary"
                    app:layout_column="0"
                    app:layout_row="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_text_new_item_name"
                    app:layout_columnWeight="1"
                    android:editable="true"
                    app:layout_column="1"
                    app:layout_row="1" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_btn_new_item_bar_code"
                    app:layout_gravity="center"
                    android:src="@drawable/barcode"
                    app:layout_rowWeight="1"
                    app:layout_column="0"
                    app:layout_row="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/text_view_new_item_bar_code"
                    app:layout_gravity="fill_horizontal|left|center"
                    android:background="#e2e1f0"
                    app:layout_column="1"
                    app:layout_row="2"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/manual"
                    android:textColor="@color/text_primary"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal|center_vertical"
                    android:text="Manual Code:"
                    app:layout_column="0"
                    app:layout_row="3" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_text_new_item_manual_code"
                    app:layout_gravity="fill_horizontal|center_vertical"
                    android:enabled="true"
                    app:layout_column="1"
                    app:layout_row="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:id="@+id/editText7"
                    android:text="Quantity"
                    app:layout_gravity="fill_horizontal|center"
                    app:layout_rowWeight="1"
                    app:layout_column="0"
                    app:layout_row="4" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/edit_text_new_item_qty"
                    android:textColor="@color/text_primary"
                    app:layout_gravity="fill_horizontal|center"
                    app:layout_column="1"
                    app:layout_row="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="@color/text_primary"
                    android:id="@+id/text_view_new_item_category_label"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal|center_vertical"
                    app:layout_column="0"
                    app:layout_row="6" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_new_item_category"
                    app:layout_gravity="fill_horizontal|center_vertical"
                    app:layout_column="1"
                    app:layout_row="6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:id="@+id/text_view_new_item_location"
                    app:layout_rowWeight="1"
                    app:layout_gravity="fill_horizontal|center_vertical"
                    android:text="Location"
                    app:layout_column="0"
                    app:layout_row="5" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_text_new_item_location"
                    app:layout_gravity="fill_horizontal|center"
                    app:layout_column="1"
                    app:layout_row="5" />

            </android.support.v7.widget.GridLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="#f4f3ff">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/btn_new_item_cancel"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:id="@+id/btn_new_item_ok"
                    android:layout_gravity="center" />
            </LinearLayout>
    </LinearLayout>
</ScrollView>