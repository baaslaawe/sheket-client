<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Item Name"
            android:id="@+id/list_item_trans_history_dialog_item_name"
            android:textSize="18dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Location"
            android:id="@+id/list_item_trans_history_dialog_source_detail"
            android:textSize="16dp"
            android:textColor="#4d4d4d" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.3"
            android:id="@+id/list_item_trans_history_dialog_qty"
            android:textSize="24dp"
            android:layout_gravity="center_vertical|right"
            android:textColor="#010321"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test transaction note"
            android:id="@+id/list_item_trans_history_dialog_trans_note"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical|right" />

    </LinearLayout>

</RelativeLayout>
