<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ff37474f"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ScrollView
        android:id="@+id/navigation_scroll_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <TextView
                android:textColor="@color/right_nav_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branches"
                android:textSize="18dp"
                android:layout_marginBottom="4dp" />

            <View
                android:background="@color/right_nav_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <ListView
                android:id="@+id/layout_right_list_view_branches"
                android:divider="@color/right_nav_separator"
                android:dividerHeight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice" />

            <!-- This is like a "footer" divider view for the above listView -->
            <View
                android:background="@color/right_nav_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!-- we want this to fill the "middle" space -->
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/middlePartSpacer" />

            <ListView
                android:id="@+id/layout_right_list_view_sync"
                android:divider="@color/right_nav_separator"
                android:dividerHeight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
