<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="16dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/summary_img_btn_delete"
        android:focusable="false"
        android:background="@drawable/ic_action_remove"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/summary_img_btn_delete"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Item Name"
            android:id="@+id/summary_text_view_item_name"
            android:textSize="18dp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Source"
            android:id="@+id/summary_text_view_item_source"
            android:textSize="16dp"
            android:textColor="#4d4d4d"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25.3"
        android:id="@+id/summary_text_view_quantity"
        android:layout_alignParentRight="true"
        android:textSize="24dp"
        android:textColor="#010321"
        android:layout_centerVertical="true"
        tools:ignore="HardcodedText" />

</RelativeLayout>