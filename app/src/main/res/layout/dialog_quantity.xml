<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:columnCount="3"
    android:padding="16dp"
    app:columnOrderPreserved="false">

    <LinearLayout
        app:layout_row="0"
        app:layout_column="0"
        app:layout_columnSpan="3"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_qty_layout_transfer"
                android:padding="2dp"
                android:layout_toLeftOf="@+id/layout_right_aligned">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_qty_select_img_btn_receive"
                    android:background="@drawable/ic_action_receive" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dialog_qty_select_img_btn_send"
                    android:background="@drawable/ic_action_send"
                    android:layout_marginLeft="4dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_right_aligned"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_alignParentRight="true">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_buy"
                    android:id="@+id/dialog_qty_select_img_btn_buy" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_sell"
                    android:id="@+id/dialog_qty_select_img_btn_sell"
                    android:layout_marginLeft="4dp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        app:layout_row="2"
        app:layout_column="0"
        app:layout_columnSpan="3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/dialog_qty_layout_select_other_branch"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#f5f5f5"
        android:paddingBottom="8dp"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_qty_source_branch"
            android:id="@+id/dialog_qty_text_transfer_type"
            android:textColor="#000000"
            android:textSize="22dp"
            app:layout_gravity="center_vertical"
            app:layout_row="1"
            app:layout_column="0"
            android:layout_centerVertical="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_qty_select_branch"
            android:id="@+id/dialog_qty_btn_select_branch"
            app:layout_gravity="center_vertical|right"
            app:layout_row="1"
            app:layout_column="2"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        app:layout_row="3"
        app:layout_column="0"
        app:layout_columnSpan="3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/dialog_qty_layout_other_branch_qty"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#f5f5f5"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Branch"
            android:id="@+id/dialog_qty_text_selected_branch_name"
            android:textSize="20dp"
            android:textColor="#000000"
            app:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            tools:ignore="HardcodedText" />

        <LinearLayout
            app:layout_row="2"
            app:layout_column="2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/dialog_qty_text_other_branch_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textSize="32dp"
                android:layout_gravity="center_vertical|right"
                android:text="204.3"
                android:visibility="visible"
                tools:ignore="HardcodedText" />


            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_qty_img_item_not_exist"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_action_halt"
                android:layout_gravity="center_vertical|right"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_qty_quantity"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_row="4"
        android:layout_marginBottom="4dp"
        app:layout_column="0"
        android:layout_marginTop="4dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_columnSpan="3"
        app:layout_column="0"
        app:layout_row="5">

        <EditText android:id="@+id/dialog_qty_edit_text_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            app:layout_columnSpan="3"
            app:layout_column="0"
            app:layout_row="5"
            android:layout_weight="1"
            android:layout_gravity="top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m2"
            android:id="@+id/dialog_qty_text_unit_extension"
            android:textColor="#000000"
            android:layout_gravity="top"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:orientation="vertical"
            android:id="@+id/dialog_qty_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard"
                android:id="@+id/dialog_qty_radio_standard"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derived"
                android:id="@+id/dialog_qty_radio_derived"
                app:layout_column="2"
                app:layout_gravity="right"
                app:layout_row="4"
                tools:ignore="HardcodedText" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 Roll = 3 * (150 m) = 1500 m"
        android:id="@+id/dialog_qty_text_conversion"
        android:textColor="#000000"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#bbdefb"
        app:layout_columnSpan="3"
        app:layout_row="6"
        app:layout_column="0"
        android:paddingLeft="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_qty_note"
        android:textStyle="bold"
        app:layout_row="7"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        app:layout_column="0" />

    <EditText android:id="@+id/dialog_qty_edit_text_item_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_row="8"
        app:layout_columnSpan="3"
        android:imeOptions="actionDone"
        android:maxLength="20"
        app:layout_column="0"
        android:singleLine="true" />

    <RelativeLayout
        app:layout_row="9"
        app:layout_columnSpan="3"
        app:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_qty_cancel"
            android:id="@+id/dialog_qty_btn_cancel"
            android:layout_alignParentLeft="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_qty_continue"
            android:id="@+id/dialog_qty_btn_continue"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_qty_finish"
            android:id="@+id/dialog_qty_btn_finish"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        app:layout_row="1"
        app:layout_columnSpan="3"
        app:layout_column="0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/dialog_qty_img_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_no_action_transfer"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</android.support.v7.widget.GridLayout>

