<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:columnCount="3"
    app:columnOrderPreserved="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#fff"
        android:orientation="vertical"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_row="0">

        <LinearLayout
            android:id="@+id/dialog_qty_layout_transaction_type_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/dialog_qty_select_img_btn_four_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_receive" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/dialog_qty_select_img_btn_four_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_send" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/dialog_qty_select_img_btn_four_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_buy" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/dialog_qty_select_img_btn_four_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_sell" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dialog_qty_layout_transaction_type_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/dialog_qty_select_img_btn_two_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_buy" />

                <ImageButton
                    android:id="@+id/dialog_qty_select_img_btn_two_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_action_sell" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_row="1">

        <ImageButton
            android:id="@+id/dialog_qty_img_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:src="@drawable/ic_action_no_action_transfer" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dialog_qty_layout_select_other_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#f5f5f5"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_row="2">

        <TextView
            android:id="@+id/dialog_qty_text_transfer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/dialog_qty_source_branch"
            android:textColor="#000000"
            android:textSize="22dp"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="1" />

        <Button
            android:id="@+id/dialog_qty_btn_select_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:text="@string/dialog_qty_select_branch"
            app:layout_column="2"
            app:layout_gravity="center_vertical|right"
            app:layout_row="1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_qty_layout_other_branch_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#f5f5f5"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_row="3">

        <TextView
            android:id="@+id/dialog_qty_text_selected_branch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Sample Branch"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_gravity="center_vertical"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_column="2"
            app:layout_gravity="right"
            app:layout_row="2">

            <TextView
                android:id="@+id/dialog_qty_text_other_branch_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:fontFamily="sans-serif-light"
                android:text="204.3"
                android:textSize="32dp"
                android:visibility="visible"
                tools:ignore="HardcodedText" />


            <ImageView
                android:id="@+id/dialog_qty_img_item_not_exist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/ic_action_halt"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/dialog_qty_quantity"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_column="0"
        app:layout_row="4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_row="5">

        <EditText
            android:id="@+id/dialog_qty_edit_text_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="20"
            app:layout_column="0"
            app:layout_columnSpan="3"
            app:layout_row="5" />

        <TextView
            android:id="@+id/dialog_qty_text_unit_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="m2"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:id="@+id/dialog_qty_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/dialog_qty_radio_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/dialog_qty_radio_derived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derived"
                app:layout_column="2"
                app:layout_gravity="right"
                app:layout_row="4"
                tools:ignore="HardcodedText" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_qty_text_conversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bbdefb"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="3 Roll = 3 * (150 m) = 1500 m"
        android:textColor="#000000"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_row="6"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dialog_qty_note"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_column="0"
        app:layout_row="7" />

    <EditText
        android:id="@+id/dialog_qty_edit_text_item_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:maxLength="20"
        android:singleLine="true"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_row="8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_row="9">

        <Button
            android:id="@+id/dialog_qty_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/dialog_qty_cancel" />

        <Button
            android:id="@+id/dialog_qty_btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/dialog_qty_continue" />

        <Button
            android:id="@+id/dialog_qty_btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/dialog_qty_finish" />

    </RelativeLayout>

</android.support.v7.widget.GridLayout>

