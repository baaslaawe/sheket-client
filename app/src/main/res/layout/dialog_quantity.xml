<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Action:"
        android:id="@+id/textView10"
        android:textColor="#000000"
        android:textSize="24dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_qty_spinner_action_type"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#878787" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_qty_layout_other_branch">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Branch:"
            android:id="@+id/textView11"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_qty_spinner_other_branch" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#878787" />

    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_qty_layout_units">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Units:"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textColor="#000000" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_qty_spinner_units"
                android:layout_weight="1"
                android:background="#f1f7ff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText android:id="@+id/dialog_qty_edit_text_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:inputType="number"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  pcs"
                android:id="@+id/dialog_qty_text_unit_extension"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Roll = 3 * (150 m) = 1500 m"
            android:id="@+id/dialog_qty_text_conversion"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#c7e0ff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textSize="20dp" />

        <EditText android:id="@+id/dialog_qty_edit_text_item_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/dialog_qty_btn_cancel"
                android:layout_alignParentLeft="true"
                android:minWidth="100dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:id="@+id/dialog_qty_btn_ok"
                android:layout_alignParentRight="true"
                android:minWidth="100dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>