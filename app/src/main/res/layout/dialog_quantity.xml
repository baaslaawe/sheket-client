<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:padding="16dp">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="3"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action:"
            android:id="@+id/textView10"
            android:textColor="#000000"
            android:textSize="24dp"
            app:layout_row="0"
            app:layout_column="0" />

        <ImageButton
            android:id="@+id/dialog_qty_img_btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_edit_purple"
            app:layout_row="0"
            app:layout_column="2"
            app:layout_gravity="center_vertical|right"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:id="@+id/dialog_qty_text_transfer_type"
            android:textColor="#000000"
            android:textSize="22dp"
            app:layout_gravity="center_vertical"
            app:layout_row="1"
            app:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Branch"
            android:id="@+id/dialog_qty_btn_select_branch"
            app:layout_gravity="center_vertical|right"
            app:layout_row="1"
            app:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Branch"
            android:id="@+id/dialog_qty_text_selected_branch"
            android:textSize="20dp"
            android:textColor="#000000"
            app:layout_row="2"
            app:layout_column="0"
            app:layout_gravity="center_vertical" />

        <LinearLayout
            app:layout_row="2"
            app:layout_column="2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_qty_layout_other_branch_qty"
            android:layout_centerVertical="true"
            app:layout_gravity="right"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/dialog_qty_text_other_branch_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textSize="32dp"
                android:layout_gravity="center_vertical|right"
                android:text="204.3"
                android:visibility="visible" />


            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_qty_img_item_not_exist"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_action_halt"
                android:layout_gravity="center_vertical|right"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_row="3"
            android:layout_marginBottom="4dp"
            app:layout_column="0" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard"
            android:id="@+id/dialog_qty_radio_standard"
            app:layout_row="4"
            app:layout_column="0" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Derived"
            android:id="@+id/dialog_qty_radio_derived"
            app:layout_column="2"
            android:layout_marginBottom="8dp"
            app:layout_gravity="right"
            app:layout_row="4" />

        <EditText android:id="@+id/dialog_qty_edit_text_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:inputType="number"
            app:layout_columnSpan="3"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Roll = 3 * (150 m) = 1500 m"
            android:id="@+id/dialog_qty_text_conversion"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#c7e0ff"
            app:layout_columnSpan="3"
            app:layout_row="6"
            app:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note:"
            android:textStyle="bold"
            app:layout_row="7"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textSize="20dp" />

        <EditText android:id="@+id/dialog_qty_edit_text_item_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_row="8"
            app:layout_columnSpan="3"
            android:maxLength="20"/>

    </android.support.v7.widget.GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/dialog_qty_btn_cancel"
            android:layout_alignParentLeft="true"
            android:minWidth="100dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/dialog_qty_btn_ok"
            android:layout_alignParentRight="true"
            android:minWidth="100dp" />
    </RelativeLayout>

</LinearLayout>