<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/list_item_all_items_category_layout_select">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_all_items_category_check_box_select" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike"
        android:id="@+id/list_item_all_items_category_text_view_category_name"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/list_item_all_items_category_layout_select"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_all_items_category_layout_edit"
        android:layout_toLeftOf="@+id/list_item_all_items_category_text_view_sub_count"
        android:layout_centerVertical="true"
        android:padding="16dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_all_items_category_btn_edit"
            android:layout_toLeftOf="@+id/img_sub_category"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_edit_grey" />
    </FrameLayout>

    <ImageView
        android:id="@+id/img_sub_category"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_action_next_item"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/list_item_all_items_category_text_view_sub_count"
        android:layout_toLeftOf="@id/img_sub_category"
        android:textSize="20dp"
        android:textColor="#010321"
        android:layout_centerVertical="true" />
</RelativeLayout>
