<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingRight="16dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_box_container"
        android:padding="16dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/list_item_item_category_check_box_select"
            android:focusable="false"
            android:layout_centerVertical="true" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike"
        android:id="@+id/list_item_item_category_category_name"
        android:layout_toRightOf="@+id/check_box_container"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:textColor="#000000" />


    <ImageView
        android:id="@+id/img_sub_category"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_action_next_item"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/list_item_item_category_sub_category_count"
        android:layout_toLeftOf="@id/img_sub_category"
        android:textSize="20dp"
        android:textColor="#010321"
        android:layout_centerVertical="true" />
</RelativeLayout>
