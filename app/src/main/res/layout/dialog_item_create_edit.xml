<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:columnCount="3"
    android:padding="16dp"
    app:columnOrderPreserved="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_row="0"
        app:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_item_c_e_edit_text_name"
        app:layout_row="0"
        app:layout_column="1"
        app:layout_columnSpan="2"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code: "
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_row="1"
        app:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_item_c_e_edit_text_code"
        app:layout_row="1"
        app:layout_column="1"
        app:layout_columnSpan="2"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Units: "
        android:textSize="22dp"
        app:layout_row="2"
        app:layout_column="0"
        app:layout_gravity="center_vertical" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/dialog_item_c_e_btn_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:fb_radius="5dp"
        app:fb_textSize="16sp"
        app:fb_text="Pcs"
        app:fb_textColor="#fff"
        app:fb_defaultColor="#64dd17"
        app:fb_focusColor="#64dd17"
        app:layout_row="2"
        app:layout_column="1"
        app:layout_columnSpan="2"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Has Bundle: "
        android:textSize="22dp"
        app:layout_row="3"
        app:layout_column="0"
        app:layout_gravity="center_vertical" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_item_c_e_toggle_has_bundle"
        app:layout_row="3"
        app:layout_column="1"
        android:checked="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:orientation="vertical"
        app:layout_row="4"
        app:layout_column="0"
        app:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#a5d6a7">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Bundle Name: "
                android:textSize="20dp"
                android:layout_weight="2"
                android:id="@+id/text_bundle_name" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_item_c_e_edit_text_bundle_name"
                android:layout_weight="3" android:layout_marginLeft="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Multiply By: "
                android:textSize="20dp"
                android:id="@+id/text_multiply_by"
                android:layout_weight="2" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_item_c_e_edit_text_bundle_factor"
                android:layout_weight="3"
                android:layout_marginLeft="12dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Roll = 3 * (150 m) = 1500 m"
            android:id="@+id/dialog_item_c_e_text_conversion_rate"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#e0e0e0"
            android:paddingLeft="16dp" />

    </LinearLayout>
</android.support.v7.widget.GridLayout>
