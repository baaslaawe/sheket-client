<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/list_item_add_employee_chk_choose_branch"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp" />

    <TextView
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Shop"
        android:id="@+id/list_item_add_employee_text_branch_name"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/list_item_add_employee_chk_choose_branch"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/list_item_add_employee_layout_see_qty"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/list_item_add_employee_layout_buy_item"
        android:padding="8dp">
        <ImageView
            android:id="@+id/list_item_add_employee_img_see_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_eye_open_dark"/>
        <CheckBox
            android:id="@+id/list_item_add_employee_chk_see_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_add_employee_layout_buy_item"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="8dp">
        <ImageView
            android:id="@+id/list_item_add_employee_img_buy_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_add_dark"/>

        <CheckBox
            android:id="@+id/list_item_add_employee_chk_buy_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
