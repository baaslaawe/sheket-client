<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/list_item_img_btn_b_edit_location"
        android:focusable="false"
        android:background="@drawable/ic_action_location_2"
        android:layout_centerVertical="true"
        android:padding="8dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:id="@+id/layout_item_name_section"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/list_item_img_btn_b_edit_location"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/list_item_text_view_b_item_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:text="sh_20_50" />

        <TextView
            android:id="@+id/list_item_text_view_b_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="Shell 20-50 Oil" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_alignParentRight="true"
        android:id="@+id/layout_branch_item_section"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/list_item_text_view_b_item_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-light"
            android:textSize="32dp"
            android:layout_gravity="center_vertical|right"
            android:text="204.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-10"
            android:id="@+id/list_item_text_view_b_item_loc"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical|right" />
    </LinearLayout>

</RelativeLayout>
