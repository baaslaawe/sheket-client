<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="500dp"
    android:padding="16dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_layout_member_id">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/employee_dialog_member_id"
            android:id="@+id/textView8"
            android:layout_weight="2"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_edit_text_member_id"
            android:layout_weight="3"
            android:inputType="textNoSuggestions"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_layout_member_name"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/employee_dialog_name"
            android:id="@+id/textView13"
            android:layout_weight="2"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Test Member Name"
            android:id="@+id/dialog_text_view_member_name"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:background="#e5e5e5"
            android:textColor="#000000"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#878787"/>

    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/employee_dialog_permission"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="8dp" />
        -->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_member_spinner_permission_type"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/dialog_member_layout_permission_branch"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#878787"/>

        <ListView
            android:id="@+id/dialog_member_list_branches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/dialog_btn_member_cancel"
            android:layout_weight="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/dialog_btn_member_add_edit"
            android:layout_weight="3" />
    </LinearLayout>

</LinearLayout>
