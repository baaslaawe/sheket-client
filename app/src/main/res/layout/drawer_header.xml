<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navdrawer_image_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/navdrawer_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/navdrawer_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_material_design" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Company Name"
        android:id="@+id/navigation_text_view_company_name"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:paddingLeft="8dp"
        android:layout_alignBottom="@+id/navdrawer_image"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
