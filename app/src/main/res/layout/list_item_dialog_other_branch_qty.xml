<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/list_item_dialog_other_branch_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginLeft="8dp"
        android:layout_weight="2"
        android:text="Other Branch"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/list_item_dialog_other_branch_text_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="32dp"
            android:layout_gravity="center_vertical|right"
            android:text="204.3"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_dialog_other_branch_img_not_exist"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_halt"
            android:visibility="visible"
            android:layout_gravity="right" />

    </LinearLayout>

</RelativeLayout>
